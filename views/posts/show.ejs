<h2><%= post.title %></h2>
<p>by <%= post.author.name %></p>
<p><%= post.content %></p>

<p>Tags:</p>
<ul>
  <% post.tags.forEach(function(tag) { %>
    <li><%= tag.name %></li>
  <% }); %>
</ul>
<form method="POST" action='/tags'>
  <input type="text" name="name" placeholder="Add a tag to this post..."><br />
  <input type="hidden" name="postId" value="<%= post.id %>">
  <input type="submit" value="Tag it!">
</form>

<hr>
<h3>Share your thoughts on this post:</h3>
<form action="/posts/<%= post.id %>/comments" method="POST">
  <input type="text" name="name" placeholder="Placeholder..." value="Placeholder..."><br />
  <input type="text" name="content" placeholder="Your comment..."><br />
  <input type="submit" value="Comment!">
</form>
<hr />

<% post.comments.forEach(function(comment) { %>
  <p>"<%= comment.content %>" - <%= comment.name %></p>
<% }); %>
